{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // 新增关键配置，解决 .vue 文件类型检查问题
    "skipLibCheck": true,        // 跳过第三方库的类型检查，避免无关报错
    "allowJs": true,             // 允许混合 JS/TS 文件（适配纯 JS 的 .vue 文件）
    "types": ["vite/client"],    // 引入 Vite 客户端类型，识别 import.meta.env 等
    "moduleResolution": "Node",  // 采用 Node 模块解析策略，适配 Vue 组件导入
    "noEmit": true               // 只做类型检查，不生成编译文件（由 Vite 负责构建）
  }
}
